<div class="row editor" name="assets">
  <div class="col">
    <input type="text" class="update_item" name="subject" value="<%= asset.subject %>"></div>
  <div class="col">
    <input type="text" class="update_item" name="cost" value="<%= asset.cost %>"></div>
  <div class="col">
    <span>
      <input type="text" class="update_item" name="down_payment" style="width:75%" value="<%= asset.down_payment %>">
      <%= link_to investment_path(asset), method: :delete do %>
        <i class="material-icons delete_item">delete_outline</i>
      <% end %>
      <%= link_to investment_path(asset), method: :put do %>
        <i class="material-icons save_item">done</i>
      <% end %>
    </span>
  </div>
</div>
