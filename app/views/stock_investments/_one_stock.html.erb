<div class="row editor" name="coding">
  <div class="col">
    <input type="text" class="update_item" name="coding" value="<%= asset.coding %>" >
  </div>
  <div class="col">
    <input type="text" class="update_item" name="amount" value="<%= asset.amount %>" >
  </div>
  <div class="col">
    <span>
      <input type="text" class="update_item" style="width:75%" name="price" value="<%= asset.price %>" >
      <%= link_to stock_investment_path(asset), method: :delete do %>
        <i class="material-icons delete_item">delete_outline</i>
      <% end %>
      <%= link_to stock_investment_path(asset), method: :put do %>
        <i class="material-icons save_item">done</i>
      <% end %>
    </span>
  </div>

</div>
